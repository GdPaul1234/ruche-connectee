    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python : FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "main:app"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Backend Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHON_ENV": "TEST"
            },
            "console": "integratedTerminal"
        }
    ]
}
